{
    "compilerOptions": {
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "incremental": true,
        "strict": true,

        "module": "commonjs",
        "target": "es5",
        "allowJs": true,
        "sourceMap": true,

        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks":false,
        "resolveJsonModule": true,

        "baseUrl": "src",
        "paths": {
            "*": ["../node_modules/*"],
            //"@server/*": ["./*"]
          },
        "outDir": "./build",
    },
    "include": [
        "src/**/*"
    ]
}